{
	"$schema": "https://turbo.build/schema.v2.json",
	"globalDependencies": [".env"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"outputLogs": "new-only"
		},
		"test:unit": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"outputLogs": "new-only"
		},
		"versions:fix": {
			"cache": false
		}
	}
}
