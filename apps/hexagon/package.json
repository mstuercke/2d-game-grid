{
  "name": "@2d-game-grid/hexagon",
  "version": "0.0.12",
  "description": "A simple hexagon grid made for games",
  "keywords": [
    "grid",
    "game",
    "pathfinding",
    "distance",
    "2d",
    "hexagon"
  ],
  "license": "MIT",
  "author": "Marvin St√ºrcke",
  "repository": "https://github.com/mstuercke/2d-game-grid",
  "main": "src/index.ts",
  "files": [
    "src/",
    "!src/**/*.test.ts",
    "!src/**/*.fixture.ts",
    "dist/",
    "README.md"
  ],
  "exports": {
    ".": {
